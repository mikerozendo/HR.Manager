@using Sales.Backoffice.Dto
@model List<GetEmployeesResponse>
@{
    ViewData["Title"] = "Employees";
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title">Create a new Employee</h5>
    </div>
    <>
    <button class="btn btn-sm btn-success" asp-controller="Employee" asp-action="Create">New</button>
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Last Name</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @foreach (var employee in Model)
                    {
                        <td>@employee.Name</td>
                        <td>@employee.LastName</td>
                    }
                </tr>
            </tbody>
        </table>
    </div>
</div>