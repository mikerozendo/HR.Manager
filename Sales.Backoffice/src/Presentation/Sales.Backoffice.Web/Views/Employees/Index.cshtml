@using Sales.Backoffice.Dto.Responses
@model List<GetEmployeeResponse>
@{
    ViewData["Title"] = "Employees";
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title">Employees</h5>
    </div>
    <div class="card-body">
        <div class="text-end">
            <a class="text-end btn btn-sm btn-primary" asp-controller="Employee" asp-action="Create">New</a>
        </div>
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">LastName</th>
                    <th scope="col">Start</th>
                    <th scope="col">End</th>
                    <th scope="col">Birth Date</th>
                    <th scope="col">Department</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @foreach (var employee in Model)
                    {
                        <td>@employee.Name</td>
                        <td>@employee.LastName</td>
                        <td>@employee.ContractStart.ToString("dd/MM/yyyy")</td>
                        <td>@employee.ContractEnd?.ToString("dd/MM/yyyy")</td>
                        <td>@employee.BirthDate.ToString("dd/MM/yyyy")</td>
                        <td>@employee.DepartmentType</td>
                    }
                </tr>
            </tbody>
        </table>
    </div>
</div>